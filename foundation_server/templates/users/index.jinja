{% extends "base.jinja" %}

{% block title %}
  Users
{% endblock  %}

{% block content %}
  <h1 class="text-lg-center">Users</h1>
    <div class="col-lg-9 mx-auto mt-3 mb-5">
      <table class="table table-striped table-hover table-borderless">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Team Name</th>
          </tr>
        </thead>
        <tbody>
          {% for user in users %}
            {% if g.user["id"] != user.id %}
              <tr>
                <th scope="row">{{ user.id }}</th>
                <td>
                  <a href="{{ url_for('users.user', id=user.id) }}">{{ user.first_name }} {{ user.last_name }}</a>
                </td>
                <td>
                  <a href="{{ url_for('teams.team', id=user.team_id) }}">
                    {{ user.team_name}}
                  </a>
                </td>
              </tr>
            {% endif %}
          {% endfor %}
        </tbody>
      </table>
    </div>
{% endblock %}